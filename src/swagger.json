{
  "openapi": "3.1.0",
  "info": {
    "title": "Gerenciamento de Alunos: Documentação da API",
    "description": "Essa API fornece acesso a recursos para armazenar, recuperar, atualizar e excluir informações sobre alunos em uma instituição educacional. Com ela você conseguirá interagir com dados detalhados de alunos, incluindo nome, idade, notas de semestres, nome do professor e número da sala.",
    "version": "1.0.0"
  },
  "basePath": "/",
  "servers": [
    {
      "url": "https://school-api-rbyx.onrender.com",
      "description": "API em produção"
    },
    {
      "url": "http://localhost:3333",
      "description": "API de test"
    }
  ],
  "paths": {
    "/student": {
      "post": {
        "description": "Essa rota será responsável por criar um novo aluno.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Student"
              },
              "examples": {
                "student": {
                  "value": {
                    "name": "João Marcelo",
                    "age": 20,
                    "firstSemesterScore": 7.5,
                    "secondSemesterScore": 6.5,
                    "teacherName": "Arnaldo Júnior",
                    "roomNumber": 5
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Student"
                }
              }
            }
          }
        }
      }
    },
    "/students": {
      "get": {
        "description": "Essa rota será responsável por listar todos os alunos já cadastrados.",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Student"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/student/{id}": {
      "get": {
        "description": "Essa rota será responsável por encontrar um aluno específico pelo id.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id do aluno",
            "required": true
          }
        ],
        "responses": {
          "204": {
            "description": "No Content",
            "content": {
              "application/json": {
                "example": {
                  "message": "Aluno não encontrado"
                }
              }
            }
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Student"
                }
              }
            }
          }
        }
      },
      "put": {
        "description": "Essa rota será responsável por alterar os dados de um aluno específico pelo id.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id do aluno",
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Student"
              },
              "examples": {
                "student": {
                  "value": {
                    "name": "Maria Luiza",
                    "age": 16,
                    "firstSemesterScore": 2.5,
                    "secondSemesterScore": 10,
                    "teacherName": "Júlia Maria",
                    "roomNumber": 7
                  }
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "No Content",
            "content": {
              "application/json": {
                "example": {
                  "message": "Aluno não encontrado"
                }
              }
            }
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Student"
                }
              }
            }
          }
        }
      },
      "delete": {
        "description": "Essa rota será responsável por apagar um aluno específico pelo id.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id do aluno",
            "required": true
          }
        ],
        "responses": {
          "204": {
            "description": "No Content",
            "content": {
              "application/json": {
                "example": {
                  "message": "Aluno não encontrado"
                }
              }
            }
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "example": {
                  "message": "Aluno deletado"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Student": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "age": {
            "type": "integer"
          },
          "firstSemesterScore": {
            "type": "number"
          },
          "secondSemesterScore": {
            "type": "number"
          },
          "teacherName": {
            "type": "string"
          },
          "roomNumber": {
            "type": "integer"
          }
        }
      }
    }
  }
}
